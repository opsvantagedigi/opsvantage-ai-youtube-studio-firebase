rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read and write their own files
    match /{userId}/{fileType}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow access to public assets
    match /public/{allPaths=**} {
      allow read: if true;
    }
    
    // Allow access to generated videos and assets
    match /final_videos/{videoId} {
      allow read, write: if request.auth != null;
    }
    
    match /voiceovers/{userId}/{voiceoverId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /thumbnails/{userId}/{thumbnailId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}