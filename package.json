{
  "name": "ai-youtube-studio",
  "version": "1.0.0",
  "description": "Monorepo for Prompt-to-Video web app.",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "deploy:web": "netlify deploy --prod --dir=apps/web/.next",
    "prepare": "husky install",
    "test": "echo \"No tests\"",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "build:web": "pnpm --filter apps/web build",
    "start:web": "pnpm --filter apps/web dev",
    "format": "prettier --write .",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "check": "npm run lint && npm run typecheck",
    "commitlint": "commitlint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@netlify/plugin-nextjs": "^5.15.5",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@auth/core": "^0.34.3",
    "@bull-board/api": "^5.23.0",
    "@bull-board/express": "^5.23.0",
    "@fastify/middie": "^9.1.0",
    "bullmq": "^5.0.0",
    "express": "^5.2.1",
    "ioredis": "^5.3.2",
    "next-auth": "^4.24.13",
    "uuid": "^13.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write"
    ]
  }
}
